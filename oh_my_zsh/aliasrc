# git
alias g="git"

alias gs="g status"
alias gh="g stash"
alias grb="g rebase -i"
alias ghp="gh pop"
alias grm="g rm"
alias gmv="g mv"
alias gb="g branch"
alias ga="g add"
alias gc="g commit"
alias gca="git commit -a"
alias gcm="g commit --amend"
alias gco="g checkout"
alias gm="g merge"
alias gmt="g mergetool"
alias gd="g diff"
alias gdc="g diff --cached"
alias gup="g pull"
alias gp="g push"
alias gpu="gp -u origin"
alias gpo="gp origin"
alias gl="pretty_git_log -30"

# bash
alias ls="ls -GFh"
alias lh="ls -lah"

# homebrew
alias brewup="brew update && brew upgrade --all && brew cleanup -s && brew prune"

# rbenv
alias rnv="rbenv"

# bundler
alias be="bundle exec"
alias ber="be rake"

# rails
alias rc="be rails c"
alias rs="be rails s"
alias rdb="be rails db"
alias rg="be rails g"

# database
alias dbd="ber db:drop"
alias dbc="ber db:create"
alias dbm="ber db:migrate"
alias dbs="ber db:seed"
alias dbrb="dbd && dbc && dbm && dbs"

# testing
alias atst="be autotest"

# foreman
alias fs="foreman start"

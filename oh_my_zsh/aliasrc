# git
alias g="git"

alias gs="g status"
alias gh="g stash"
alias grb="g rebase -i"
alias ghp="gh pop"
alias grm="g rm"
alias gmv="g mv"
alias gb="g branch"
alias ga="g add"
alias gaa="g add --all"
alias gc="g commit -m"
alias gca="git commit -am"
alias gcm="g commit --amend"
alias gco="g checkout"
alias gm="g merge"
alias gd="g diff"
alias gds="g diff --stat=160,120"
alias gdc="g diff --cached --stat=160,120"
alias gup="g pull --rebase"
alias gpo="g push origin"
alias gl=". ~/.githelpers && pretty_git_log -30"

# bash
alias ls="ls -GFh"
alias lh="ls -lah"

# homebrew
alias brewup="brew update && brew upgrade && brew cleanup -s"

# ruby
alias pkr="pkill ruby"

# bundler
alias be="bundle exec"
alias ber="be rake"
alias bi="bundle install --without linux_test"

# gemset
alias eg="rvm --force gemset empty && gem install bundler && bi"

# rails
alias berr="ber routes"
alias rc="be rails c"
alias rs="be rails s"
alias rdb="be rails db"
alias rg="be rails g"
alias rgm="rg migration"

# database
alias dbd="ber db:drop"
alias dbc="ber db:create"
alias dbm="ber db:migrate"
alias dbs="ber db:seed"
alias dbtp="ber db:test:prepare"
alias dbr="dbm && ber db:reset && dbtp"
alias dbrb="dbd && dbc && dbm && dbtp"

# guard
alias grs="be guard -g rspec"

# testing
alias atst="be autotest"

# foreman
alias fs="be foreman start"

# other
alias res="rm -rf /usr/local/var/mongodb/re && mkdir /usr/local/var/mongodb/re && chmod 777 /usr/local/var/mongodb/re && fs"

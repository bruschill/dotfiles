# bash
alias clr="clear"
alias lh="ls -lah"

# git
alias g="git"

alias gs="g status"

alias gh="g stash"
alias ga="g add"
alias gd="g diff"
alias grm="g rm"
alias gmv="g mv"

alias gc="g commit -vm"
alias gca="g commit -vam"
alias gp="g push"

alias gco="g checkout"
alias gb="g branch"
alias gm="g merge"
alias gmt="g mergetool"
alias grc="g --rebase --continue"

alias gup="g fetch && g rebase"

alias glg="g log --stat --max-count=10"

# ruby
alias pkr="pkill ruby"

# bundler
alias be="bundle exec"
alias ber="be rake"
alias bi="bundle install --without linux_test"

# gemset
alias eg="rvm --force gemset empty && gem install bundler && bi"

# rails
alias berr="ber routes"
alias rc="be rails c"
alias rs="be rails s"
alias rdb="be rails db"
alias rg="be rails g"
alias rgm="rg migration"

#database
alias dbm="ber db:migrate"
alias dbtp="ber db:test:prepare"
alias dbr="dbm && ber db:reset"
alias dbrb="ber db:drop && ber db:create && dbm && ber db:seed && dbtp"

#redis/resque
alias rdd="redis-server /usr/local/etc/redis.conf"
alias rdw="be QUEUE=* rake resque:work"
alias rds="ber resque:scheduler"

#thinking sphinx
alias tsr="ber ts:rebuild"

# guard
alias grs="be guard -g rspec"
alias gcu="be guard -g cucumber"

#foreman
alias fs="be foreman start"

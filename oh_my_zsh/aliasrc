# bash
alias clr="clear"
alias ls="ls -GFh"
alias lh="ls -lah"
alias pag="ps aux | grep"

# git
alias g="git"

alias gs="g status"

alias gh="g stash"
alias ga="g add"
alias gd="g diff"
alias grm="g rm"
alias gmv="g mv"

alias gc="g commit -vm"
alias gca="g commit -vam"
alias gp="g push"

alias gco="g checkout"
alias gb="g branch"
alias gm="g merge"
alias gmt="g mergetool"
alias grc="g --rebase --continue"

alias gup="g fetch && g rebase"

alias glg="g log --stat --max-count=10"

# ruby
alias pkr="pkill ruby"

# bundler
alias be="bundle exec"
alias ber="be rake"
alias bi="bundle install --without linux_test"

# gemset
alias eg="rvm --force gemset empty && gem install bundle && bi"

# rails
alias berr="ber routes"
alias rc="be rails c"
alias rs="be rails s"
alias rdb="be rails db"
alias rg="be rails g"
alias rgm="rg migration"

#database
alias dbd="ber db:drop"
alias dbc="ber db:create"
alias dbm="ber db:migrate"
alias dbs="ber db:seed"
alias dbtp="ber db:test:prepare"
alias dbr="dbm && ber db:reset && dbtp"
alias dbrb="dbd && dbc && dbm && dbs && dbtp"

#redis/resque
alias rdd="redis-server /usr/local/etc/redis.conf"
alias rdw="be QUEUE=* rake resque:work"
alias rds="ber resque:scheduler"

#thinking sphinx
alias tsr="ber ts:rebuild"

# guard
alias grs="be guard -g rspec"
alias gcu="be guard -g cucumber"

#testing
alias atst="be autotest"

#foreman
alias fs="be foreman start"

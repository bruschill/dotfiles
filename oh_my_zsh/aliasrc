# git
alias g="git"

alias gs="g status"
alias gh="g stash"
alias grb="g rebase -i"
alias ghp="gh pop"
alias grm="g rm"
alias gmv="g mv"
alias gb="g branch"
alias ga="g add"
alias gaa="g add --all"
alias gc="g commit"
alias gca="git commit -a"
alias gcm="g commit --amend"
alias gco="g checkout"
alias gm="g merge"
alias gmt="g mergetool"
alias gd="g diff"
alias gdc="g diff --cached"
alias gup="g pull"
alias gp="g push"
alias gpu="gp -u origin"
alias gpo="gp origin"
alias gl="pretty_git_log -30"

# bash
alias ls="ls -GFh"
alias lh="ls -lah"

# homebrew
alias brewup="brew update && brew upgrade && brew cleanup -s && brew prune"

# ruby
alias pkr="pkill ruby"

# bundler
alias be="bundle exec"
alias ber="be rake"

# rails
alias berr="ber routes"
alias rc="be rails c"
alias rs="be rails s"
alias rdb="be rails db"
alias rg="be rails g"
alias rgm="rg migration"

# database
alias dbd="ber db:drop"
alias dbc="ber db:create"
alias dbtp="ber db:test:prepare"
alias dbm="ber db:migrate && dbtp"
alias dbs="ber db:seed"
alias dbr="dbm && ber db:reset"
alias dbrb="dbd && dbc && dbm"

# guard
alias grs="be guard -g rspec"

# testing
alias atst="be autotest"

# foreman
alias fs="be foreman start"

# other
alias res="rm -rf /usr/local/var/mongodb/re && mkdir /usr/local/var/mongodb/re && chmod 777 /usr/local/var/mongodb/re && fs"

# bash
alias lh="ls -lah"

# git
alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit -vam"
alias gp="git push"
alias gm="git merge"
alias gup="git pull --rebase"
alias gco="git checkout"
alias gre="git reset --hard HEAD"
alias grm="git rm"

# ruby
alias pkr="pkill ruby"

# rails
alias bi="bundle install"

alias mgs="mongod run --config /usr/local/Cellar/mongodb/1.8.3-x86_64/mongod.conf"

alias rd="redis-server /usr/local/etc/redis.conf"
alias rdw="bundle exec QUEUE=* rake resque:work"
alias rds="bundle exec rake resque:scheduler"

alias dbm="bundle exec rake db:migrate"
alias dbr="bundle exec rake db:reset && rake db:test:prepare"
alias dbrb="bundle exec rake db:drop && bundle exec rake db:create && bundle exec rake db:migrate && bundle exec rake db:seed && bundle exec rake db:test:prepare"

# bash
alias lh="ls -lah"

# git
alias g="git"

alias gs="g status"

alias ga="g add"
alias grm="g rm"
alias gcp="g cherry-pick"

alias gc="g commit -vm"
alias gca="g commit -vam"
alias gp="g push"

alias gco="g checkout"
alias gb="g branch"
alias gm="g merge"
alias grc="g --rebase --continue"

alias gup="g fetch && g rebase"
alias gre="g reset --hard HEAD"

alias glg="g log --stat --max-count=5"
alias glgg="g log --graph --max-count=5"
alias gcount="g shortlog -sn"

# ruby
alias pkr="pkill ruby"

# rails
alias be="bundle exec"

alias rdd="redis-server /usr/local/etc/redis.conf"
alias rdw="be QUEUE=* rake resque:work"
alias rds="be rake resque:scheduler"

alias dbm="be rake db:migrate"
alias dbtp="be rake db:test:prepare"
alias dbr="dbm && be rake db:reset && dbtp"
alias dbrb="be rake db:drop && be rake db:create && dbm && be rake db:seed && dbtp"

#heroku
alias hk="be heroku"
alias hkl="hk logs -n 300 --app"
alias hkm="hk run rake db:migrate --app"
alias hks="hk run rake db:seed --app"

#foreman
alias fs="be foreman start"

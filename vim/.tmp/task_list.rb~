#  id          :integer         not null, primary key
#  title       :string(255)
#  description :string(255)
#  completed   :boolean
#  xp_value    :integer         default(0)
#  created_at  :datetime
#  updated_at  :datetime
#  user_id     :integer
#

class TaskList < ActiveRecord::Base
  attr_accessible :title, :description, :completed, :xp_value

  validates :title, :presence => true,
                    :length => { :within => 1..40 }

  belongs_to :user
  has_many :tasks, :class_name => 'Task'
end

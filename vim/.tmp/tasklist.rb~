include SessionsHelper
class Tasklist < ActiveRecord::Base
  attr_accessible :title, :description, :completed, :xp_value

  validates :title, :presence => true,
                    :length => { :within => 1..40 }

  belongs_to :user
  has_many :tasks

  def self.get_task_lists(user)
    Tasklist.find_by_user_id(user.id) unless user != current_user
  end
end

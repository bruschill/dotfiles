#  id              :integer         not null, primary key
#  bio             :string(255)
#  xp_total        :integer         default(0)
#  level_value     :integer         default(0)
#  tasks_completed :integer         default(0)
#  created_at      :datetime
#  updated_at      :datetime
#  user_id         :integer
#

class Profile < ActiveRecord::Base
  attr_accessible :bio, :tasks_completed, :level_value, :xp_total

  validates_length_of :bio, { :maximum => 140, :allow_blank => true}

  belongs_to :user

  def to_param
    user_id
  end
end

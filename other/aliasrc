# grep
alias grep="grep -v grep | grep"

# git
alias g="git"

alias gs="g status"
alias grb="g rebase -i"
alias gh="g stash"
alias ghp="gh pop"
alias grm="g rm"
alias gmv="g mv"
alias gb="g branch"
alias ga="g add"
alias gc="g commit"
alias gca="g commit -a"
alias gcm="g commit --amend"
alias gco="g checkout"
alias gm="g merge"
alias gmt="g mergetool"
alias gd="g diff"
alias gdc="g diff --cached"
alias gf="g fetch"
alias gup="g pull --rebase"
alias gp="g push"
alias gf="g fetch"
alias gpu="gp -u origin"
alias gpo="gp origin"
alias gl="tig"

# bash
alias ls="ls -GFh"
alias lh="ls -lah"

# homebrew
alias update_universal_ctags="brew reinstall --HEAD universal-ctags"
alias update_ag="brew reinstall --HEAD ag"
alias update_fzf="brew reinstall --HEAD fzf && sh /usr/local/opt/fzf/install --all"
alias update_neovim="brew reinstall --HEAD neovim && pip2 install --upgrade neovim && pip3 install --upgrade neovim"
alias brewclean="brew prune && brew cleanup -s && brew cask cleanup"
alias brewup="brew update && brew upgrade --all && update_universal_ctags && update_ag && update_fzf && update_neovim && brewclean"

# bundler
alias be="bundle exec"
alias ber="be rake"

# rails
alias rc="be rails c"
alias rs="be rails s"
alias rdb="be rails db"
alias rg="be rails g"

# database
alias dbd="ber db:drop"
alias dbc="ber db:create"
alias dbm="ber db:migrate"
alias dbs="ber db:seed"
alias dbr="ber db:reset"
alias dbrb="dbd && dbc && dbm && dbs"

# foreman
alias fs="foreman start"

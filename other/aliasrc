# general
alias exit='sh ~/.zsh_config.d/cowboy.sh; sleep 1; exit'
alias knit='bundle && yarn --ignore-engines'

# grep
alias grep="grep -v grep | grep"

# git
alias g="git"

alias gs="g status"
alias grb="g rebase -i"
alias gh="g stash"
alias ghp="gh pop"
alias grm="g rm"
alias gmv="g mv"
alias gb="g branch"
alias ga="g add"
alias gc="g commit -S"
alias gca="g commit -S -a"
alias gcm="g commit -S --amend"
alias gco="g checkout"
alias gm="g merge"
alias gmt="g mergetool"
alias gd="g diff --color-moved"
alias gdc="g diff --cached --color-moved"
alias gf="g fetch"
alias gup="g pull --rebase --autostash"
alias gp="g push"
alias gf="g fetch"
alias gfp="g fetch -pP"
alias gpu="gp -u origin"
alias gpo="gp origin"
alias gl="tig"

# bash
alias ls="ls -GFh"
alias lh="ls -lah"

# homebrew
alias update_neovim_dependencies="pip2 install -U neovim && pip3 install -U neovim"
alias brewclean="brew prune && brew cleanup -s && brew cask cleanup"
alias brewup="brew update && brew upgrade"

# bundler
alias be="bundle exec"
alias ber="be rake"

# rails
alias rc="be rails c"
alias rs="be rails s"
alias rdb="be rails db"
alias rg="be rails g"
alias rcreds="rails credentials:edit"

# database
alias dbd="ber db:drop"
alias dbc="ber db:create"
alias dbm="ber db:migrate db:test:prepare"
alias dbs="ber db:seed"
alias dbr="ber db:reset"
alias dbrb="dbd && dbc && dbm && dbs"

# foreman
alias fs="foreman start"
